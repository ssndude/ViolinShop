
@model ViolinShop.Models.Customers

 <div class='container'>
    <div class='row'>
        <div class='col-sm-4 col-sm-offset-1'>
            <div class='well'>
                <form name="Customer">
                    <button name="Clear" onclick="clearImmediate" ; />
                    
                          <div class='col-sm-10'>
                            <div class='form-group'>
                                <label for='ID'>ID</label><input type='text' name='ID' class='form-control' value="@Model.ID" />
                                                            </div>
                            <div class='form-group'>
                                <label for='fname'>First Name</label><input type='text' name='fname' class='form-control' value="@Model.FirstName" />
                            </div>
                            <div class='form-group'>
                                <label for='lname'>Last Name</label><input type='text' name='lname' class='form-control'  value="@Model.LastName" />
                            </div>
                            <div class='form-group'>
                                 <label for='mname'>Middle Name or initial</label><input type='text' name='mname' class='form-control'  value="@Model.MiddleName"/>
                            </div>
                            <div class='form-group'>
                                <label for='email'>Email</label><input type='text' name='email' class='form-control'  value="@Model.EmailAddress"/>
                            </div>
                            <div class='form-group'>
                                <div class='col-sm-6'>
                                    <label for='Stud'>Student</label><input type='CheckBox' enable="true"  value=@Model.Stud.ToString() name='stuchk' class='form-control' Checked=@Model.Stud />
                                </div>
                            </div>                                                                        
                            <div class='form-group'>
                                <div class='col-sm-6'> 
                                    <label for='Cust'>Customer</label><input type='CheckBox' enable="true"   value=@Model.Cust.ToString() Name='customchk'class='form-control' Checked=@Model.Cust />
                                </div>
                               
                            </div>
                        </div>
                                                                                    
                  </form>
            </div>
        </div>
    </div>
</div>
</body>