@Model ICollection<ViolinShop.Models.Products>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>My Shopping List</h2>
            </div>
            
       </div>
       <div class="col-md-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Image</td>
                        <td>Name</td>
                        <td>Price</td>
                        <td>Subtotal</td>
                        <td></td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td style="background-color:White;">
                                <input type="image" src="~/Images/@product.Image" height="40" with="40" alt="Image on the way" />
                            </td>
                            <td style="background-color:White;">
                                <input type="text" value="@product.Description" />
                                <input type="hidden" name="Product.Id" value="@product.Id" />
                            </td>

                            <td>
                                <input type="text" value="@product.Price" />
                            </td>

                            <td><input type="Text" name="Subtotal" value="0" /></td>
                            <td><button class="btn btn-primary">add</button></td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="col-md-6">
                <div class="pull-right">
                    <a href="#" class="btn btn-info">Continue Shopping</a>
                    <a href="#" class="btn btn-success">Checkout</a>
                </div>
            </div>
        </div>

    </div>
